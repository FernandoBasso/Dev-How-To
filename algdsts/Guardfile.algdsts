# vim: set filetype=ruby:

require 'asciidoctor'
require 'awesome_print'

file = 'algdsjs.index.adoc'

guard 'shell' do
  watch(/(\.adoc$)/) { |m|
    puts '-' * 80
    ap m
    puts '-' * 80

    Asciidoctor.convert_file(
      file,
      :safe => :unsafe,
      :to_file => "#{file}.html"
    )
  }
end

